<odoo>
    <data>
        <record id="property_rule_user" model="ir.rule">
            <field name="name">Property for Users</field>
            <field name="model_id" ref="real_estate.model_estate_property"/>
            <field name="domain_force">[('sales_id','=', user.id)]</field>
            <field name="groups" eval="[(4, ref('real_estate.group_property_user'))]"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
        </record>

        <record id="property_rule_manager" model="ir.rule">
            <field name="name">Property for Managers</field>
            <field name="model_id" ref="real_estate.model_estate_property"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('real_estate.group_property_manager'))]"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
        </record>
    </data>
</odoo>