<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="estate_property_offer_tree_view" model="ir.ui.view">
            <field name="name">estate.property.offer.tree</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <tree decoration-success="status == 'accepted'" decoration-danger="status == 'refused'">
                    <field name="name"/>
                    <field name="status"/>
                    <field name="partner_id"/>
                    <field name="property_id"/>
                </tree>
            </field>
        </record>


        <record id="estate_property_offer_form_view" model="ir.ui.view">
            <field name="name">estate.property.offer.form</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="price"/>
                                <field name="status"/>
                                <field name="partner_id"/>
                                <field name="property_id"/>
                            </group>
                            <group>
                                <field name="validity"/>
                                <field name="deadline"/>
                                <field name="offer_date"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

       <record id="action_property_offer" model="ir.actions.act_window">
            <field name="name">Property Offer</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="estate_property_offer_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Property Offer to Estate Property
                </p>
            </field>
        </record>
    </data>
</odoo>